<!-- GSAP + ScrollTrigger -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.14.1/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.14.1/ScrollTrigger.min.js"></script>

<!-- tsParticles -->
<script src="https://cdn.jsdelivr.net/npm/tsparticles@2.10.1/tsparticles.bundle.min.js"></script>

<script>
  // Animate cards on scroll
  gsap.utils.toArray(".feature-card, .testimonial-card").forEach((card, i) => {
    gsap.from(card, {
      scrollTrigger: {
        trigger: card,
        start: "top 80%",
      },
      opacity: 0,
      y: 50,
      duration: 1.2,
      ease: "power3.out",
      delay: i * 0.2
    });
  });

  // Initialize particles for each feature card
  function initParticles(id, color) {
    tsParticles.load(id, {
      fpsLimit: 60,
      background: { color: "transparent" },
      particles: {
        number: { value: 30, density: { enable: true, area: 800 } },
        color: { value: color },
        shape: { type: "circle" },
        opacity: { value: 0.3, random: true },
        size: { value: { min: 1, max: 3 } },
        move: { enable: true, speed: 1, direction: "none", random: true, straight: false, outModes: "out" },
      },
      interactivity: { detectsOn: "canvas", events: { onHover: { enable: true, mode: "repulse" } } },
      detectRetina: true
    });
  }

  [0,1,2].forEach(i => initParticles("particles-"+i, "#ffffff"));
</script>

